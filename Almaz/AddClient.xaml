<Window x:Class="Almaz.AddClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Almaz"
        mc:Ignorable="d"
        Title="Добавить заказчика" Height="185" Width="388">
    <Grid>
        <Label Content="ФИО" HorizontalAlignment="Left" Margin="20,29,0,0" VerticalAlignment="Top"/>
        <TextBox Margin="128,33,10,0" TextWrapping="Wrap" Text="{Binding ФИО_заказчика}" VerticalAlignment="Top"/>
        <Label Content="Номер телефона" HorizontalAlignment="Left" Margin="20,52,0,0" VerticalAlignment="Top"/>
        <TextBox Margin="128,56,10,0" TextWrapping="Wrap" Text="{Binding Номер_телефона}" VerticalAlignment="Top"/>
        <Label Content="Адрес" HorizontalAlignment="Left" Margin="20,75,0,0" VerticalAlignment="Top"/>
        <TextBox Margin="128,79,10,0" TextWrapping="Wrap" Text="{Binding Адрес}" VerticalAlignment="Top"/>
        <Button Content="Добавить" Margin="19,102,273,0" Click="Add" Height="32" VerticalAlignment="Top"/>
        <Button Content="Отменить" Margin="282,102,10,0" Click="Back" Height="32" VerticalAlignment="Top"/>

    </Grid>
</Window>
