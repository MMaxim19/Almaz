<Window x:Class="Almaz.MetallAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Almaz"
        mc:Ignorable="d"
        Title="Добавление металла" Height="213" Width="351">
    <Grid>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="194,139,0,0" VerticalAlignment="Top" Click="Button_Click" />
        <TextBox HorizontalAlignment="Left" Margin="154,72,0,0" TextWrapping="Wrap" Text="{Binding Метал}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Металл" HorizontalAlignment="Left" Margin="63,68,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="154,94,0,0" TextWrapping="Wrap" Text="{Binding Цена_за_грамм}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Цена за грамм" HorizontalAlignment="Left" Margin="63,90,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
